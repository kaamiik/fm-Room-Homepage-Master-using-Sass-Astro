---
import Layout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/HeroSection.astro";
import PromoSection from "../components/PromoSection.astro";
import AboutSection from "../components/AboutSection.astro";
---

<Layout title="Frontend Mentor | Room homepage">
  <HeroSection />

  <PromoSection />

  <img
    class="about-dark"
    src="/assets/images/image-about-dark.jpg"
    alt="A modern, minimalist interior setting with a light-colored wooden coffee table in the foreground. The table has a white bowl on it, surrounded by two black armchairs with metal armrests. In the background, there's a bed with a dark-colored bedspread and pillows, and a wooden headboard."
  />

  <AboutSection />

  <img
    class="about-light"
    src="/assets/images/image-about-light.jpg"
    alt="a modern white chair in a plain, light gray setting. The chair has a round back and thin legs, blending in with the simple background. Soft shadows to the right add a bit of contrast, highlighting the chairâ€™s minimalist design."
  />
</Layout>

<style lang="scss">
  @use "../styles/abstracts/" as *;
  .about-dark,
  .about-light {
    width: 100%;
    height: 100%;
    max-height: 34.375rem;
    object-fit: cover;

    @include mq(large) {
      max-height: revert;
    }
  }

  .about-dark {
    animation: slide-in-left 1000ms ease-in-out backwards;
    animation-delay: 500ms;
    @include mq(large) {
      grid-column: 1;
      grid-row: 2;
    }

    @media (prefers-reduced-motion) {
      animation: 0;
    }
  }

  .about-light {
    animation: slide-in-right 1000ms ease-in-out backwards;
    animation-delay: 500ms;
    @include mq(large) {
      grid-column: 4;
      grid-row: 2;
    }

    @media (prefers-reduced-motion) {
      animation: 0;
    }
  }

  @keyframes slide-in-left {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0%);
      opacity: 1;
    }
  }

  @keyframes slide-in-right {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0%);
      opacity: 1;
    }
  }
</style>
